<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Add Signup Link to Login Form -->
        <template id="login_signup_link" inherit_id="web.login" name="Add Signup Link">
            <xpath expr="//form[@class='oe_login_form']" position="after">
                <div class="text-center mt-4 pt-3" style="border-top: 1px solid #e9ecef;">
                    <p class="mb-2 text-muted" style="font-size: 14px;">
                        Don't have an account?
                    </p>
                    <a href="/j_signup_validation/signup" class="btn btn-outline-primary btn-sm mt-1" 
                       style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none; color: white; border-radius: 25px; padding: 8px 20px; font-weight: 500; text-decoration: none; display: inline-block; transition: all 0.3s ease;">
                        <i class="fa fa-user-plus me-1"></i>
                        Create Account
                    </a>
                </div>
            </xpath>
        </template>

        <!-- Custom Signup Form Template -->
        <template id="custom_signup_form" name="Custom Signup Form">
            <html>
                <head>
                    <meta charset="utf-8"/>
                    <meta name="viewport" content="width=device-width, initial-scale=1"/>
                    <title>Create Your Account</title>
                    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css"/>
                    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"/>
                    <link rel="stylesheet" href="/j_signup_validation/static/src/css/signup_form.css"/>
                </head>
                <body class="standalone-signup-body">
                    <div class="container-fluid vh-100 d-flex align-items-center justify-content-center">
                        <div class="row w-100 justify-content-center">
                            <div class="col-12 col-sm-11 col-md-9 col-lg-7 col-xl-6">
                            <div class="card custom-signup-card shadow-lg">
                                <div class="card-header text-center bg-primary text-white">
                                    <h3 class="mb-0">
                                        <i class="fa fa-user-plus me-2"></i>
                                        Create Your Account
                                    </h3>
                                    <p class="mb-0 mt-2">Join us today and get started!</p>
                                </div>
                                
                                <div class="card-body p-4">
                                    <!-- Error Messages -->
                                    <t t-if="error">
                                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                            <i class="fa fa-exclamation-triangle me-2"></i>
                                            <t t-esc="error"/>
                                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                        </div>
                                    </t>
                                    
                                    <!-- Success Messages -->
                                    <t t-if="success">
                                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                                            <i class="fa fa-check-circle me-2"></i>
                                            <t t-esc="success"/>
                                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                        </div>
                                    </t>
                                    
                                    <!-- Signup Form -->
                                    <form method="POST" action="/j_signup_validation/submit" id="signupForm" novalidate="novalidate">
                                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                        
                                        <!-- Name Fields Row -->
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3">
                                                    <input type="text" 
                                                           class="form-control" 
                                                           id="first_name" 
                                                           name="first_name" 
                                                           placeholder="First Name"
                                                           required="required"
                                                           autocomplete="given-name"/>
                                                    <label for="first_name">
                                                        <i class="fa fa-user me-1"></i>First Name *
                                                    </label>
                                                    <div class="invalid-feedback"></div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3">
                                                    <input type="text" 
                                                           class="form-control" 
                                                           id="last_name" 
                                                           name="last_name" 
                                                           placeholder="Last Name"
                                                           required="required"
                                                           autocomplete="family-name"/>
                                                    <label for="last_name">
                                                        <i class="fa fa-user me-1"></i>Last Name *
                                                    </label>
                                                    <div class="invalid-feedback"></div>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <!-- Email Field -->
                                        <div class="form-floating mb-3">
                                            <input type="email" 
                                                   class="form-control" 
                                                   id="email" 
                                                   name="email" 
                                                   placeholder="Email Address"
                                                   required="required"
                                                   autocomplete="email"/>
                                            <label for="email">
                                                <i class="fa fa-envelope me-1"></i>Email Address *
                                            </label>
                                            <div class="invalid-feedback"></div>
                                            <div class="form-text">
                                                <span class="email-validation-status"></span>
                                            </div>
                                        </div>
                                        
                                        <!-- Phone Fields in Same Row -->
                                        <div class="row mb-3">
                                            <!-- Country Selector -->
                                            <div class="col-md-6">
                                                <div class="form-floating">
                                                    <select class="form-control country-selector" 
                                                            id="phone_country" 
                                                            name="phone_country" 
                                                            required="required">
                                                        <option value="" disabled="">Select Country</option>
                                                        <t t-foreach="countries" t-as="country">
                                                            <option t-att-value="country.id" 
                                                                    t-att-data-code="country.phone_code"
                                                                    t-att-data-country-code="country.code"
                                                                    t-att-data-flag-url="country.image_url"
                                                                    t-att-selected="'selected' if country.code == 'SA' else None">
                                                                <t t-esc="country.name"/> +<t t-esc="country.phone_code"/>
                                                            </option>
                                                        </t>
                                                    </select>
                                                    <label for="phone_country">
                                                        <i class="fa fa-globe me-1"></i>Country *
                                                    </label>
                                                </div>
                                            </div>
                                            
                                            <!-- Phone Number Field -->
                                            <div class="col-md-6">
                                                <div class="form-floating">
                                                    <input type="tel" 
                                                           class="form-control" 
                                                           id="phone" 
                                                           name="phone" 
                                                           placeholder="Phone Number"
                                                           required="required"
                                                           autocomplete="tel"/>
                                                    <label for="phone">
                                                        <i class="fa fa-phone me-1"></i>Phone Number *
                                                    </label>
                                                    <div class="invalid-feedback"></div>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <!-- Phone validation feedback -->
                                        <div class="form-text mb-3">
                                            <span class="phone-validation-status"></span>
                                            <div class="phone-preview mt-2">
                                                <small class="text-muted">Full number: <span id="phone-preview-text">+966 </span></small>
                                            </div>
                                        </div>
                                        
                                        <!-- Password Field -->
                                        <div class="form-floating mb-3">
                                            <input type="password" 
                                                   class="form-control" 
                                                   id="password" 
                                                   name="password" 
                                                   placeholder="Password"
                                                   required="required"
                                                   autocomplete="new-password"/>
                                            <label for="password">
                                                <i class="fa fa-lock me-1"></i>Password *
                                            </label>
                                            <div class="invalid-feedback"></div>
                                            
                                            <!-- Password Strength Indicator -->
                                            <div class="password-strength-container mt-2">
                                                <div class="password-strength-bar">
                                                    <div class="password-strength-progress" style="width: 0%"></div>
                                                </div>
                                                <div class="password-strength-text">
                                                    <small class="text-muted">Password Strength: <span class="strength-label">Very Weak</span></small>
                                                </div>
                                                <div class="password-requirements mt-2">
                                                    <small class="text-muted">Password Requirements:</small>
                                                    <ul class="password-requirements-list">
                                                        <li class="requirement" data-requirement="length">
                                                            <i class="fa fa-times text-danger"></i>
                                                            At least <span t-esc="password_rules.get('min_length', 8)"/> characters
                                                        </li>
                                                        <li class="requirement" data-requirement="number" t-if="password_rules.get('require_number')">
                                                            <i class="fa fa-times text-danger"></i>
                                                            At least one number
                                                        </li>
                                                        <li class="requirement" data-requirement="uppercase" t-if="password_rules.get('require_uppercase')">
                                                            <i class="fa fa-times text-danger"></i>
                                                            At least one uppercase letter
                                                        </li>
                                                        <li class="requirement" data-requirement="lowercase" t-if="password_rules.get('require_lowercase')">
                                                            <i class="fa fa-times text-danger"></i>
                                                            At least one lowercase letter
                                                        </li>
                                                        <li class="requirement" data-requirement="special" t-if="password_rules.get('require_special')">
                                                            <i class="fa fa-times text-danger"></i>
                                                            At least one special character
                                                        </li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <!-- Confirm Password Field -->
                                        <div class="form-floating mb-4">
                                            <input type="password" 
                                                   class="form-control" 
                                                   id="confirm_password" 
                                                   name="confirm_password" 
                                                   placeholder="Confirm Password"
                                                   required="required"
                                                   autocomplete="new-password"/>
                                            <label for="confirm_password">
                                                <i class="fa fa-lock me-1"></i>Confirm Password *
                                            </label>
                                            <div class="invalid-feedback"></div>
                                        </div>
                                        
                                        <!-- Submit Button -->
                                        <div class="d-grid gap-2">
                                            <button type="submit" class="btn btn-primary btn-lg" id="submitBtn">
                                                <i class="fa fa-user-plus me-2"></i>
                                                Create Account
                                            </button>
                                        </div>
                                        
                                        <!-- Login Link -->
                                        <div class="text-center mt-3">
                                            <p class="mb-0">
                                                Already have an account? 
                                                <a href="/web/login" class="text-primary text-decoration-none">
                                                    <strong>Sign In</strong>
                                                </a>
                                            </p>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                    <!-- Pass validation rules to JavaScript -->
                    <script type="text/javascript">
                        window.signupValidationRules = {
                            password: <t t-raw="json.dumps(password_rules)"/>,
                            email: <t t-raw="json.dumps(email_rules)"/>,
                            phone: <t t-raw="json.dumps(phone_rules)"/>
                        };
                    </script>
                    
                    <!-- Include JavaScript modules -->
                    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
                    <script src="/j_signup_validation/static/src/js/password_strength.js"></script>
                    <script src="/j_signup_validation/static/src/js/country_phone_selector.js"></script>
                    <script src="/j_signup_validation/static/src/js/signup_validation.js"></script>
                </body>
            </html>
        </template>
    </data>
</odoo>