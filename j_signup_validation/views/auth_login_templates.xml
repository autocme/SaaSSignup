<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Add Signup Link to Login Form -->
    <template id="login_signup_link" inherit_id="web.login" name="Add Signup Link">
        <xpath expr="//form[@class='oe_login_form']" position="after">
            <div class="text-center mt-4 pt-3" style="border-top: 1px solid #e9ecef;">
                <p class="mb-2 text-muted" style="font-size: 14px;">
                    Don't have an account?
                </p>
                <a href="/j_signup_validation/signup" class="btn btn-outline-primary btn-sm mt-1"
                   style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none; color: white; border-radius: 25px; padding: 8px 20px; font-weight: 500; text-decoration: none; display: inline-block; transition: all 0.3s ease;">
                    <i class="fa fa-user-plus me-1"></i>
                    Create Account
                </a>
            </div>
        </xpath>
    </template>

    <!-- Custom Signup Form Template -->
    <template id="custom_signup_form" name="Custom Signup Form">
        <t t-call="web.login_layout">
            <t t-set="head">
                <link rel="stylesheet" href="/j_signup_validation/static/src/css/signup_form.css"/>
            </t>

            <div class="oe_signup j-signup-container">
                <div class="oe_signup_form j-signup-form">
                    <div class="j-signup-header">
                        <h3>
                            <i class="fa fa-user-plus me-2"></i>
                            Create Your Account
                        </h3>
                        <p>Join us today and get started!</p>
                    </div>
                                    <!-- Error Messages -->
                                    <t t-if="error">
                                        <div class="j-alert j-error">
                                            <i class="fa fa-exclamation-triangle me-2"></i>
                                            <t t-esc="error"/>
                                        </div>
                                    </t>

                                    <!-- Success Messages -->
                                    <t t-if="success">
                                        <div class="j-alert j-success">
                                            <i class="fa fa-check-circle me-2"></i>
                                            <t t-esc="success"/>
                                        </div>
                                    </t>

                                    <!-- Signup Form -->
                                    <form method="POST" action="/j_signup_validation/submit" id="signupForm"
                                          novalidate="novalidate">
                                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                                        <!-- Account Type Selection -->
                                        <div class="j-account-type-section">
                                            <h6>Account Type</h6>
                                            <div class="j-account-type-options">
                                                <div class="j-radio-option">
                                                    <input type="radio" name="account_type" id="individual" value="individual" checked="checked"/>
                                                    <label for="individual">
                                                        <i class="fa fa-user me-2"></i>Individual
                                                    </label>
                                                </div>
                                                <div class="j-radio-option">
                                                    <input type="radio" name="account_type" id="company" value="company"/>
                                                    <label for="company">
                                                        <i class="fa fa-building me-2"></i>Company
                                                    </label>
                                                </div>
                                            </div>
                                        </div>



                                        <!-- Name Fields Row -->
                                        <div class="j-form-group j-half-width">
                                            <input type="text"
                                                   class="j-form-input"
                                                   id="first_name"
                                                   name="first_name"
                                                   placeholder="First Name *"
                                                   required="required"
                                                   autocomplete="given-name"/>
                                        </div>
                                        <div class="j-form-group j-half-width">
                                            <input type="text"
                                                   class="j-form-input"
                                                   id="last_name"
                                                   name="last_name"
                                                   placeholder="Last Name *"
                                                   required="required"
                                                   autocomplete="family-name"/>
                                        </div>

                                        <!-- Email Field -->
                                        <div class="j-form-group">
                                            <input type="email"
                                                   class="j-form-input"
                                                   id="email"
                                                   name="email"
                                                   placeholder="Email Address *"
                                                   required="required"
                                                   autocomplete="email"/>
                                            <div class="j-validation-status email-validation-status"></div>
                                        </div>

                                        <!-- VAT/CR Field (Hidden by default) -->
                                        <div class="j-form-group j-vat-field" id="vat_cr_field">
                                            <input type="text"
                                                   class="j-form-input"
                                                   id="vat_cr_number"
                                                   name="vat_cr_number"
                                                   placeholder="VAT/CR Number *"
                                                   autocomplete="organization"/>
                                        </div>

                                        <!-- Phone Fields -->
                                        <div class="j-form-group">
                                            <select class="j-form-input j-country-select"
                                                    id="phone_country"
                                                    name="phone_country"
                                                    required="required">
                                                <option value="" disabled="">Select Country</option>
                                                <t t-foreach="countries" t-as="country">
                                                    <option t-att-value="country.id"
                                                            t-att-data-code="country.phone_code"
                                                            t-att-selected="'selected' if country.code == 'SA' else None">
                                                        <t t-esc="country.name"/> +<t t-esc="country.phone_code"/>
                                                    </option>
                                                </t>
                                            </select>
                                        </div>

                                        <div class="j-form-group">
                                            <input type="tel"
                                                   class="j-form-input"
                                                   id="phone"
                                                   name="phone"
                                                   placeholder="Phone Number *"
                                                   required="required"
                                                   autocomplete="tel"/>
                                            <div class="j-phone-preview" id="phone_preview"></div>
                                            <div class="j-validation-status phone-validation-status"></div>
                                        </div>

                                        <!-- Password Field -->
                                        <div class="j-form-group j-password-group">
                                            <input type="password"
                                                   class="j-form-input"
                                                   id="password"
                                                   name="password"
                                                   placeholder="Password *"
                                                   required="required"
                                                   autocomplete="new-password"/>
                                            <button type="button" class="j-password-toggle" data-target="password">
                                                <i class="fa fa-eye"></i>
                                            </button>
                                            
                                            <!-- Password Strength Indicator -->
                                            <div class="j-password-strength">
                                                <div class="j-strength-bar">
                                                    <div class="j-strength-progress" style="width: 0%"></div>
                                                </div>
                                                <div class="j-strength-text">
                                                    Password Strength: <span class="strength-label">Very Weak</span>
                                                </div>
                                                <div class="j-requirements password-requirements-list">
                                                    <div class="j-requirement" data-requirement="length">
                                                        <i class="fa fa-times"></i>
                                                        <span t-esc="password_rules.get('min_length', 8)"/>+ chars
                                                    </div>
                                                    <div class="j-requirement" data-requirement="number"
                                                        t-if="password_rules.get('require_number')">
                                                        <i class="fa fa-times"></i>
                                                        One number
                                                    </div>
                                                    <div class="j-requirement" data-requirement="uppercase"
                                                        t-if="password_rules.get('require_uppercase')">
                                                        <i class="fa fa-times"></i>
                                                        Uppercase letter
                                                    </div>
                                                    <div class="j-requirement" data-requirement="lowercase"
                                                        t-if="password_rules.get('require_lowercase')">
                                                        <i class="fa fa-times"></i>
                                                        Lowercase letter
                                                    </div>
                                                    <div class="j-requirement" data-requirement="special"
                                                        t-if="password_rules.get('require_special')">
                                                        <i class="fa fa-times"></i>
                                                        Special character
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Confirm Password Field -->
                                        <div class="j-form-group j-password-group">
                                            <input type="password"
                                                   class="j-form-input"
                                                   id="confirm_password"
                                                   name="confirm_password"
                                                   placeholder="Confirm Password *"
                                                   required="required"
                                                   autocomplete="new-password"/>
                                            <button type="button" class="j-password-toggle" data-target="confirm_password">
                                                <i class="fa fa-eye"></i>
                                            </button>
                                        </div>

                                        <!-- Dynamic Fields Section -->
                                        <t t-if="dynamic_fields">
                                            <div class="j-additional-section">
                                                <h6>Additional Information</h6>
                                                <t t-foreach="dynamic_fields" t-as="field">
                                                    <div class="j-dynamic-field">
                                                        <!-- Text Field -->
                                                        <t t-if="field['field_type'] in ['char', 'text']">
                                                            <t t-if="field['field_type'] == 'char'">
                                                                <input type="text"
                                                                       class="j-form-input"
                                                                       t-att-id="'dynamic_' + field['field_name']"
                                                                       t-att-name="field['field_name']"
                                                                       t-att-placeholder="field['placeholder'] or field['field_label'] + (' *' if field['required'] else '')"
                                                                       t-att-required="'required' if field['required'] else None"/>
                                                            </t>
                                                            <t t-if="field['field_type'] == 'text'">
                                                                <textarea class="j-form-input"
                                                                          t-att-id="'dynamic_' + field['field_name']"
                                                                          t-att-name="field['field_name']"
                                                                          t-att-placeholder="field['placeholder'] or field['field_label'] + (' *' if field['required'] else '')"
                                                                          t-att-required="'required' if field['required'] else None"
                                                                          style="height: 80px; resize: vertical;"></textarea>
                                                            </t>
                                                        </t>
                                                        
                                                        <!-- Number Fields -->
                                                        <t t-if="field['field_type'] in ['integer', 'float']">
                                                            <input t-att-type="'number'"
                                                                   class="j-form-input"
                                                                   t-att-id="'dynamic_' + field['field_name']"
                                                                   t-att-name="field['field_name']"
                                                                   t-att-placeholder="field['placeholder'] or field['field_label'] + (' *' if field['required'] else '')"
                                                                   t-att-step="'any' if field['field_type'] == 'float' else '1'"
                                                                   t-att-required="'required' if field['required'] else None"/>
                                                        </t>
                                                        
                                                        <!-- Selection Fields -->
<!--                                                        <t t-if="field['field_type'] in ['selection']">-->
<!--                                                            <select class="form-control"-->
<!--                                                                    t-att-id="'dynamic_' + field['field_name']"-->
<!--                                                                    t-att-name="field['field_name']"-->
<!--                                                                    t-att-placeholder="field['placeholder'] or field['field_label']"-->
<!--                                                                    t-att-required="'required' if field['required'] else None">-->
<!--                                                                <option value="" disabled="">Select</option>-->
<!--                                                                <t t-foreach="field['field_name']" t-as="selection">-->
<!--                                                                    <option t-att-value="selection">-->
<!--                                                                        <t t-esc="selection"/>-->
<!--&lt;!&ndash;                                                                        <t t-esc="selection.display_name"/>&ndash;&gt;-->
<!--                                                                    </option>-->
<!--                                                                </t>-->
<!--                                                            </select>-->
<!--                                                            <label t-att-for="'dynamic_' + field['field_name']">-->
<!--                                                                <i class="fa fa-hashtag me-1"></i>-->
<!--                                                                <t t-esc="field['field_label']"/>-->
<!--                                                                <span t-if="field['required']">*</span>-->
<!--                                                            </label>-->
<!--                                                        </t>-->

                                                        <!-- Date Fields -->
                                                        <t t-if="field['field_type'] in ['date', 'datetime']">
                                                            <input t-att-type="'datetime-local' if field['field_type'] == 'datetime' else 'date'"
                                                                   class="j-form-input"
                                                                   t-att-id="'dynamic_' + field['field_name']"
                                                                   t-att-name="field['field_name']"
                                                                   t-att-required="'required' if field['required'] else None"/>
                                                        </t>

                                                        <!-- File Upload Field -->
                                                        <t t-if="field['field_type'] == 'binary'">
                                                            <input type="file"
                                                                   class="j-form-input"
                                                                   t-att-id="'dynamic_' + field['field_name']"
                                                                   t-att-name="field['field_name']"
                                                                   t-att-accept="'image/*' if 'avatar' in field['field_name'] or 'image' in field['field_name'] else None"
                                                                   t-att-required="'required' if field['required'] else None"/>
                                                        </t>
                                                        
                                                        <!-- Boolean Field -->
                                                        <t t-if="field['field_type'] == 'boolean'">
                                                            <div style="margin-top: 0.5rem;">
                                                                <input type="checkbox"
                                                                       t-att-id="'dynamic_' + field['field_name']"
                                                                       t-att-name="field['field_name']"
                                                                       value="1"
                                                                       t-att-required="'required' if field['required'] else None"/>
                                                                <label t-att-for="'dynamic_' + field['field_name']" style="margin-left: 0.5rem; font-size: 0.875rem;">
                                                                    <t t-esc="field['field_label']"/>
                                                                    <span t-if="field['required']"> *</span>
                                                                </label>
                                                            </div>
                                                        </t>
                                                    </div>
                                                </t>
                                            </div>
                                        </t>

                                        <!-- Submit Button -->
                                        <button type="submit" class="j-submit-btn" id="submitBtn">
                                            <i class="fa fa-user-plus me-2"></i>
                                            Create Account
                                        </button>

                                        <!-- Login Link -->
                                        <div class="j-login-link">
                                            <p>
                                                Already have an account?
                                                <a href="/web/login">Sign In</a>
                                            </p>
                                        </div>
                                    </form>

                    <!-- Pass validation rules to JavaScript -->
                    <script type="text/javascript">
                        window.signupValidationRules = {
                        password:<t t-raw="json.dumps(password_rules)"/>,
                        email:<t t-raw="json.dumps(email_rules)"/>,
                        phone:
                        <t t-raw="json.dumps(phone_rules)"/>
                        };
                    </script>

                    <!-- Include JavaScript modules -->
                    <script src="/j_signup_validation/static/src/js/password_strength.js"></script>
                    <script src="/j_signup_validation/static/src/js/country_phone_selector.js"></script>
                    <script src="/j_signup_validation/static/src/js/signup_validation.js"></script>
                </div>
            </div>
        </t>
    </template>
</odoo>