<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Add Signup Link to Login Form -->
    <template id="login_signup_link" inherit_id="web.login" name="Add Signup Link">
        <xpath expr="//form[@class='oe_login_form']" position="after">
            <div class="text-center mt-4 pt-3" style="border-top: 1px solid #e9ecef;">
                <p class="mb-2 text-muted" style="font-size: 14px;">
                    Don't have an account?
                </p>
                <a href="/j_signup_validation/signup" class="btn btn-outline-primary btn-sm mt-1"
                   style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none; color: white; border-radius: 25px; padding: 8px 20px; font-weight: 500; text-decoration: none; display: inline-block; transition: all 0.3s ease;">
                    <i class="fa fa-user-plus me-1"></i>
                    Create Account
                </a>
            </div>
        </xpath>
    </template>

    <!-- Custom Signup Form Template -->
    <template id="custom_signup_form" name="Custom Signup Form">
        <t t-call="web.login_layout">

        <html>
            <head>
                <meta charset="utf-8"/>
                <meta name="viewport" content="width=device-width, initial-scale=1"/>
                <title>Create Your Account</title>
                <link rel="stylesheet"
                      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css"/>
                <link rel="stylesheet"
                      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"/>
                <link rel="stylesheet" href="/j_signup_validation/static/src/css/j_signup_unique.css"/>
            </head>
            <body class="standalone-signup-body">
                <div id="j-signup-form" class="container-fluid d-flex align-items-center justify-content-center">
                    <div class="row w-100 justify-content-center">
                        <div class="card">
                                <div class="card-header text-center text-white">
                                    <h3 class="mb-0">
                                        <i class="fa fa-user-plus me-2"></i>
                                        Create Your Account
                                    </h3>
                                    <p class="mb-0 mt-2">Join us today and get started!</p>
                                    
                                    <!-- Step Progress Indicator -->
                                    <div class="j-signup-step-progress mt-3">
                                        <div class="j-signup-step-item active" data-step="1">
                                            <div class="j-signup-step-circle">1</div>
                                            <span class="j-signup-step-label">Basic Info</span>
                                        </div>
                                        <div class="j-signup-step-item" data-step="2">
                                            <div class="j-signup-step-circle">2</div>
                                            <span class="j-signup-step-label">Password</span>
                                        </div>
                                        <div class="j-signup-step-item" data-step="3" id="additional-step-indicator" style="display: none;">
                                            <div class="j-signup-step-circle">3</div>
                                            <span class="j-signup-step-label">Additional</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body p-4">
                                    <!-- Error Messages -->
                                    <t t-if="error">
                                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                            <i class="fa fa-exclamation-triangle me-2"></i>
                                            <t t-esc="error"/>
                                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                        </div>
                                    </t>

                                    <!-- Success Messages -->
                                    <t t-if="success">
                                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                                            <i class="fa fa-check-circle me-2"></i>
                                            <t t-esc="success"/>
                                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                        </div>
                                    </t>

                                    <!-- Signup Form -->
                                    <form method="POST" action="/j_signup_validation/submit" id="signupForm"
                                          novalidate="novalidate">
                                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                                        <!-- Step 1: Basic Information -->
                                        <div class="j-signup-form-step active" id="step-1">
                                            <!-- Account Type Selection -->
                                        <div class="mb-4">
                                            <div class="row">
                                                <div class="col-12">
                                                    <div class="j-signup-account-type">
                                                        <div class="j-signup-radio-wrapper">
                                                            <div class="j-signup-radio-card selected" data-value="individual">
                                                                <input type="radio" name="account_type" id="individual" value="individual" 
                                                                       class="j-signup-radio-input" checked="checked"/>
                                                                <div class="j-signup-radio-icon"></div>
                                                                <i class="fa fa-user"></i>
                                                                <span>Individual</span>
                                                            </div>
                                                            <div class="j-signup-radio-card" data-value="company">
                                                                <input type="radio" name="account_type" id="company" value="company" 
                                                                       class="j-signup-radio-input"/>
                                                                <div class="j-signup-radio-icon"></div>
                                                                <i class="fa fa-building"></i>
                                                                <span>Company</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>



                                        <!-- Individual Name Fields Row -->
                                        <div class="row" id="individual_name_fields">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3">
                                                    <input type="text"
                                                           class="form-control"
                                                           id="first_name"
                                                           name="first_name"
                                                           placeholder="First Name"
                                                           autocomplete="given-name"/>
                                                    <label for="first_name">
                                                        <i class="fa fa-user me-1"></i>First Name *
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3">
                                                    <input type="text"
                                                           class="form-control"
                                                           id="last_name"
                                                           name="last_name"
                                                           placeholder="Last Name"
                                                           autocomplete="family-name"/>
                                                    <label for="last_name">
                                                        <i class="fa fa-user me-1"></i>Last Name *
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Company Name Field (Hidden by default) -->
                                        <div class="form-floating mb-3" id="company_name_field" style="display: none;">
                                            <input type="text"
                                                   class="form-control"
                                                   id="company_name"
                                                   name="company_name"
                                                   placeholder="Company Name"
                                                   autocomplete="organization"/>
                                            <label for="company_name">
                                                <i class="fa fa-building me-1"></i>Company Name *
                                            </label>
                                        </div>

                                        <!-- Email Field -->
                                        <div class="form-floating mb-3">
                                            <input type="email"
                                                   class="form-control"
                                                   id="email"
                                                   name="email"
                                                   placeholder="Email Address"
                                                   required="required"
                                                   autocomplete="email"/>
                                            <label for="email">
                                                <i class="fa fa-envelope me-1"></i>Email Address *
                                            </label>
                                            <div class="form-text">
                                                <span class="email-validation-status"></span>
                                            </div>
                                        </div>

                                        <!-- VAT/CR Field (Hidden by default) -->
                                        <div class="form-floating mb-3" id="vat_cr_field" style="display: none;">
                                            <input type="text"
                                                   class="form-control"
                                                   id="vat_cr_number"
                                                   name="vat_cr_number"
                                                   placeholder="VAT/CR Number"
                                                   autocomplete="organization"/>
                                            <label for="vat_cr_number">
                                                <i class="fa fa-file-text me-1"></i>VAT/CR Number *
                                            </label>
                                        </div>

                                        <!-- Phone Fields in Same Row -->
                                        <div class="row ">
                                            <!-- Country Selector -->
                                            <div class="col-md-6">
                                                <div class="form-floating">
                                                    <select class="form-control country-selector"
                                                            id="phone_country"
                                                            name="phone_country"
                                                            required="required">
                                                        <t t-foreach="countries" t-as="country">
                                                            <option t-att-value="country.id"
                                                                    t-att-data-code="country.phone_code"
                                                                    t-att-selected="'selected' if country.code == 'SA' else None">
                                                                <t t-esc="country.name"/>
                                                                +
                                                                <t t-esc="country.phone_code"/>
                                                            </option>
                                                        </t>
                                                    </select>
                                                    <label for="phone_country">
                                                        <i class="fa fa-globe me-1"></i>Country *
                                                    </label>
                                                </div>
                                            </div>

                                            <!-- Phone Number Field -->
                                            <div class="col-md-6">
                                                <div class="form-floating">
                                                    <input type="tel"
                                                           class="form-control"
                                                           id="phone"
                                                           name="phone"
                                                           placeholder="Phone Number"
                                                           required="required"
                                                           autocomplete="tel"/>
                                                    <label for="phone">
                                                        <i class="fa fa-phone me-1"></i>Phone Number *
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Phone validation feedback -->
                                        <div class="form-text mb-3">
                                            <span class="phone-validation-status"></span>
                                        </div>

                                        <!-- Next Button for Step 1 -->
                                        <div class="d-grid gap-2">
                                            <button type="button" class="btn btn-primary btn-lg" id="nextBtn1">
                                                <span>Next</span>
                                                <i class="fa fa-arrow-right ms-2"></i>
                                            </button>
                                        </div>
                                    </div>

                                    <!-- Step 2: Password Setup -->
                                    <div class="j-signup-form-step" id="step-2">
                                        <!-- Password Field -->
                                        <div class="form-floating mb-3">
                                            <input type="password"
                                                   class="form-control"
                                                   id="password"
                                                   name="password"
                                                   placeholder="Password"
                                                   required="required"
                                                   autocomplete="new-password"/>
                                            <label for="password">
                                                <i class="fa fa-lock me-1"></i>Password *
                                            </label>
                                            <div class="invalid-feedback"></div>

                                            <!-- Password Strength Indicator -->
                                            <div class="password-strength-container mt-2">
                                                <div class="password-strength-bar">
                                                    <div class="password-strength-progress" style="width: 0%"></div>
                                                </div>
                                                <div class="password-strength-text">
                                                    <small class="text-muted">Password Strength:
                                                        <span class="strength-label">Very Weak</span>
                                                    </small>
                                                </div>
                                                <div class="password-requirements mt-2">
                                                    <small class="text-muted">Requirements:</small>
                                                    <div class="requirements-grid password-requirements-list">
                                                        <div class="requirement" data-requirement="length">
                                                            <i class="fa fa-times text-danger"></i>
                                                            <span t-esc="password_rules.get('min_length', 8)"/>+ chars
                                                        </div>
                                                        <div class="requirement" data-requirement="number"
                                                            t-if="password_rules.get('require_number')">
                                                            <i class="fa fa-times text-danger"></i>
                                                            One number
                                                        </div>
                                                        <div class="requirement" data-requirement="uppercase"
                                                            t-if="password_rules.get('require_uppercase')">
                                                            <i class="fa fa-times text-danger"></i>
                                                            Uppercase letter
                                                        </div>
                                                        <div class="requirement" data-requirement="lowercase"
                                                            t-if="password_rules.get('require_lowercase')">
                                                            <i class="fa fa-times text-danger"></i>
                                                            Lowercase letter
                                                        </div>
                                                        <div class="requirement" data-requirement="special"
                                                            t-if="password_rules.get('require_special')">
                                                            <i class="fa fa-times text-danger"></i>
                                                            Special character
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Confirm Password Field -->
                                        <div class="form-floating mb-4">
                                            <input type="password"
                                                   class="form-control"
                                                   id="confirm_password"
                                                   name="confirm_password"
                                                   placeholder="Confirm Password"
                                                   required="required"
                                                   autocomplete="new-password"/>
                                            <label for="confirm_password">
                                                <i class="fa fa-lock me-1"></i>Confirm Password *
                                            </label>
                                            <div class="invalid-feedback"></div>
                                        </div>

                                        <!-- Navigation Buttons for Step 2 -->
                                        <div class="d-flex gap-2">
                                            <button type="button" class="btn btn-back-navigation" id="prevBtn2">
                                                <i class="fa fa-arrow-left"></i>
                                            </button>
                                            <button type="button" class="btn btn-next-navigation" id="nextBtn2">
                                                <i class="fa fa-arrow-right"></i>
                                            </button>
                                        </div>
                                    </div>

                                    <!-- Step 3: Additional Information -->
                                    <div class="j-signup-form-step" id="step-3">
                                        <!-- Dynamic Fields Section -->
                                        <t t-if="dynamic_fields">
                                            <div class="mb-4">
                                                <h6 class="text-muted mb-3">Additional Information</h6>
                                                <t t-foreach="dynamic_fields" t-as="field">
                                                    <div t-att-class="'mb-3 ' + (field.get('column_width', 'col-12') if field.get('column_width') != 'col-12' else '')">
                                                        <!-- Text Field -->
                                                        <t t-if="field['field_type'] in ['char', 'text']">
                                                            <div class="form-floating">
                                                                <t t-if="field['field_type'] == 'char'">
                                                                    <input type="text"
                                                                           class="form-control dynamic-field"
                                                                           t-att-id="'dynamic_' + field['field_name']"
                                                                           t-att-name="field['field_name']"
                                                                           t-att-placeholder="field['placeholder'] or field['field_label']"
                                                                           t-att-required="'required' if field['required'] else None"/>
                                                                </t>
                                                                <t t-if="field['field_type'] == 'text'">
                                                                    <textarea class="form-control dynamic-field"
                                                                              t-att-id="'dynamic_' + field['field_name']"
                                                                              t-att-name="field['field_name']"
                                                                              t-att-placeholder="field['placeholder'] or field['field_label']"
                                                                              t-att-required="'required' if field['required'] else None"
                                                                              style="height: 100px;"></textarea>
                                                                </t>
                                                                <label t-att-for="'dynamic_' + field['field_name']">
                                                                    <i class="fa fa-edit me-1"></i>
                                                                    <t t-esc="field['field_label']"/>
                                                                    <span t-if="field['required']"> *</span>
                                                                </label>
                                                            </div>
                                                        </t>

                                                        <!-- Number Fields -->
                                                        <t t-if="field['field_type'] in ['integer', 'float']">
                                                            <div class="form-floating">
                                                                <input t-att-type="'number'"
                                                                       class="form-control dynamic-field"
                                                                       t-att-id="'dynamic_' + field['field_name']"
                                                                       t-att-name="field['field_name']"
                                                                       t-att-placeholder="field['placeholder'] or field['field_label']"
                                                                       t-att-step="'any' if field['field_type'] == 'float' else '1'"
                                                                       t-att-required="'required' if field['required'] else None"/>
                                                                <label t-att-for="'dynamic_' + field['field_name']">
                                                                    <i class="fa fa-hashtag me-1"></i>
                                                                    <t t-esc="field['field_label']"/>
                                                                    <span t-if="field['required']"> *</span>
                                                                </label>
                                                            </div>
                                                        </t>

                                                        <!-- Selection Fields -->
<!--                                                        <t t-if="field['field_type'] in ['selection']">-->
<!--                                                            <select class="form-control"-->
<!--                                                                    t-att-id="'dynamic_' + field['field_name']"-->
<!--                                                                    t-att-name="field['field_name']"-->
<!--                                                                    t-att-placeholder="field['placeholder'] or field['field_label']"-->
<!--                                                                    t-att-required="'required' if field['required'] else None">-->
<!--                                                                <option value="" disabled="">Select</option>-->
<!--                                                                <t t-foreach="field['field_name']" t-as="selection">-->
<!--                                                                    <option t-att-value="selection">-->
<!--                                                                        <t t-esc="selection"/>-->
<!--&lt;!&ndash;                                                                        <t t-esc="selection.display_name"/>&ndash;&gt;-->
<!--                                                                    </option>-->
<!--                                                                </t>-->
<!--                                                            </select>-->
<!--                                                            <label t-att-for="'dynamic_' + field['field_name']">-->
<!--                                                                <i class="fa fa-hashtag me-1"></i>-->
<!--                                                                <t t-esc="field['field_label']"/>-->
<!--                                                                <span t-if="field['required']">*</span>-->
<!--                                                            </label>-->
<!--                                                        </t>-->

                                                        <!-- Date Fields -->
                                                        <t t-if="field['field_type'] in ['date', 'datetime']">
                                                            <div class="form-floating">
                                                                <input t-att-type="'datetime-local' if field['field_type'] == 'datetime' else 'date'"
                                                                       class="form-control dynamic-field"
                                                                       t-att-id="'dynamic_' + field['field_name']"
                                                                       t-att-name="field['field_name']"
                                                                       t-att-required="'required' if field['required'] else None"/>
                                                                <label t-att-for="'dynamic_' + field['field_name']">
                                                                    <i class="fa fa-calendar me-1"></i>
                                                                    <t t-esc="field['field_label']"/>
                                                                    <span t-if="field['required']"> *</span>
                                                                </label>
                                                            </div>
                                                        </t>

                                                        <!-- File Upload Field (like avatar_1920) -->
                                                        <t t-if="field['field_type'] == 'binary'">
                                                            <div class="mb-2">
                                                                <label t-att-for="'dynamic_' + field['field_name']" class="form-label">
                                                                    <i class="fa fa-upload me-1"></i>
                                                                    <t t-esc="field['field_label']"/>
                                                                    <span t-if="field['required']"> *</span>
                                                                </label>
                                                                <input type="file"
                                                                       class="form-control dynamic-field"
                                                                       t-att-id="'dynamic_' + field['field_name']"
                                                                       t-att-name="field['field_name']"
                                                                       t-att-accept="'image/*' if 'avatar' in field['field_name'] or 'image' in field['field_name'] else None"
                                                                       t-att-required="'required' if field['required'] else None"/>
                                                                <t t-if="field['help_text']">
                                                                    <div class="form-text">
                                                                        <t t-esc="field['help_text']"/>
                                                                    </div>
                                                                </t>
                                                            </div>
                                                        </t>

                                                        <!-- Boolean Field -->
                                                        <t t-if="field['field_type'] == 'boolean'">
                                                            <div class="form-check mb-2">
                                                                <input type="checkbox"
                                                                       class="form-check-input dynamic-field"
                                                                       t-att-id="'dynamic_' + field['field_name']"
                                                                       t-att-name="field['field_name']"
                                                                       value="1"
                                                                       t-att-required="'required' if field['required'] else None"/>
                                                                <label class="form-check-label" t-att-for="'dynamic_' + field['field_name']">
                                                                    <t t-esc="field['field_label']"/>
                                                                    <span t-if="field['required']"> *</span>
                                                                </label>
                                                                <t t-if="field['help_text']">
                                                                    <div class="form-text">
                                                                        <t t-esc="field['help_text']"/>
                                                                    </div>
                                                                </t>
                                                            </div>
                                                        </t>

                                                        <!-- Help Text for non-boolean fields -->
                                                        <t t-if="field['help_text'] and field['field_type'] != 'boolean' and field['field_type'] != 'binary'">
                                                            <div class="form-text">
                                                                <t t-esc="field['help_text']"/>
                                                            </div>
                                                        </t>
                                                    </div>
                                                </t>
                                            </div>
                                        </t>

                                        <!-- Navigation Buttons for Step 3 -->
                                        <div class="d-flex gap-2 mt-4">
                                            <button type="button" class="btn btn-back-navigation" id="prevBtn3">
                                                <i class="fa fa-arrow-left"></i>
                                            </button>
                                            <button type="submit" class="btn btn-primary btn-lg flex-fill" id="submitBtn">
                                                <i class="fa fa-user-plus me-2"></i>
                                                Create Account
                                            </button>
                                        </div>
                                    </div>

                                    <!-- Step 2 & 3 Final Buttons (when no dynamic fields) -->
                                    <div class="j-signup-step-final-buttons" id="step-2-final" style="display: none;">
                                        <div class="d-flex gap-2">
                                            <button type="button" class="btn btn-back-navigation" id="prevBtn2Final">
                                                <i class="fa fa-arrow-left"></i>
                                            </button>
                                            <button type="submit" class="btn btn-primary btn-lg flex-fill" id="submitBtn2">
                                                <i class="fa fa-user-plus me-2"></i>
                                                Create Account
                                            </button>
                                        </div>
                                    </div>

                                        <!-- Login Link -->
                                        <div class="text-center mt-3">
                                            <p class="mb-0">
                                                Already have an account?
                                                <a href="/web/login" class="text-primary text-decoration-none">
                                                    <strong>Sign In</strong>
                                                </a>
                                            </p>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
<!--                </div>-->

                <!-- Pass validation rules to JavaScript -->
                <script type="text/javascript">
                    window.signupValidationRules = {
                    password:<t t-raw="json.dumps(password_rules)"/>,
                    email:<t t-raw="json.dumps(email_rules)"/>,
                    phone:
                    <t t-raw="json.dumps(phone_rules)"/>
                    };
                </script>

                <!-- Include JavaScript modules -->
                <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
                <script src="/j_signup_validation/static/src/js/password_strength.js"></script>
                <script src="/j_signup_validation/static/src/js/country_phone_selector.js"></script>
                <script src="/j_signup_validation/static/src/js/signup_validation.js"></script>
            </body>
        </html>
        </t>
    </template>
</odoo>